<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lab02.Part5"
            stylesheets="@style.css">

    <FlowPane orientation="VERTICAL">
        <FlowPane>
            <ChoiceBox fx:id="choice"/>
            <TextField fx:id="time" editable="false"
                       focusTraversable="false"
                       mouseTransparent="true"
                       promptText="Time Elapsed"/>
        </FlowPane>
        <TextArea fx:id="output"
                  prefWidth="569"
                  prefHeight="360"
                  editable="false"
                  focusTraversable="false"
                  wrapText="true"
                  promptText="Drag and Drop File Here"
                  onDragDropped="#onDragDone"
                  onDragOver="#onDragOver"/>
    </FlowPane>

</AnchorPane>
